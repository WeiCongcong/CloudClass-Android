<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/agora_userlist_dialog_width"
    android:layout_height="@dimen/agora_userlist_dialog_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_small"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/agora_userlist_bg1"
        android:elevation="@dimen/agora_userlist_dialog_elevation"
        android:layout_margin="@dimen/agora_userlist_dialog_elevation"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_userlist_row_height"
            android:background="@drawable/agora_userlist_top_bg1"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/agora_userlist_row_height"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_smaller"
                android:textColor="@color/theme_text_color_black"
                android:text="@string/agora_userlist_dialog_title"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:background="@color/theme_divider_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_userlist_row_height"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:textColor="@color/theme_text_color_gray"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_teacher_name"/>
            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_smaller"
                android:singleLine="true"
                android:textColor="@color/theme_text_color_black"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:background="@color/theme_divider_color_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_userlist_row_height"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:background="@color/theme_gray_lighter">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:textColor="@color/theme_text_color_gray"
                android:textSize="@dimen/text_size_smaller"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text="@string/agora_userlist_table_title_student_name"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/theme_text_color_gray"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_get_on_off"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/theme_text_color_gray"
                android:textAlignment="gravity"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_access"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/theme_text_color_gray"
                android:textAlignment="gravity"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_camera"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/theme_text_color_gray"
                android:textAlignment="gravity"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_mic"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/theme_text_color_gray"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_reward"/>
            <TextView
                android:id="@+id/userlist_title_kickout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/theme_text_color_gray"
                android:textSize="@dimen/text_size_smaller"
                android:text="@string/agora_userlist_table_title_kickout"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:background="@color/theme_divider_color_gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_small"
            android:scrollbarStyle="insideInset"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/agora_userlist_dialog_list_item"/>
    </LinearLayout>
</FrameLayout>