<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/agora_userlist_row_height"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingStart="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingEnd="@dimen/padding_medium">

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_name_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5">
        <TextView
            android:id="@+id/roster_item_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:textAlignment="gravity"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/theme_text_color_black"
            android:textSize="@dimen/text_size_smaller"
            android:text="Lazily"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_desktop_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <io.agora.edu.uikit.component.SquareRelativeLayout
            android:id="@+id/roster_item_desktop_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/roster_item_desktop_icon"
                android:layout_width="@dimen/agora_userlist_row_icon_height1"
                android:layout_height="@dimen/agora_userlist_row_icon_height1"
                android:layout_centerInParent="true"
                android:checked="false"
                android:enabled="true"
                android:scaleType="fitXY"
                android:src="@drawable/agora_userlist_desktop_switch" />
        </io.agora.edu.uikit.component.SquareRelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_access_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <io.agora.edu.uikit.component.SquareRelativeLayout
            android:id="@+id/roster_access_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/roster_item_access_icon"
                android:layout_width="@dimen/agora_userlist_row_icon_height1"
                android:layout_height="@dimen/agora_userlist_row_icon_height1"
                android:layout_centerInParent="true"
                android:checked="false"
                android:enabled="true"
                android:src="@drawable/agora_userlist_access_switch"
                android:scaleType="fitXY"/>
        </io.agora.edu.uikit.component.SquareRelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_camera_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <io.agora.edu.uikit.component.SquareRelativeLayout
            android:id="@+id/roster_item_camera_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/roster_item_camera_icon"
                android:layout_width="@dimen/agora_userlist_row_icon_height1"
                android:layout_height="@dimen/agora_userlist_row_icon_height1"
                android:layout_centerInParent="true"
                android:checked="false"
                android:enabled="true"
                android:scaleType="fitXY"
                android:src="@drawable/agora_userlist_camera_switch1" />
        </io.agora.edu.uikit.component.SquareRelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_mic_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <io.agora.edu.uikit.component.SquareRelativeLayout
            android:id="@+id/roster_item_mic_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/roster_item_mic_icon"
                android:layout_width="@dimen/agora_userlist_row_icon_height1"
                android:layout_height="@dimen/agora_userlist_row_icon_height1"
                android:layout_centerInParent="true"
                android:checked="false"
                android:enabled="true"
                android:src="@drawable/agora_userlist_mic_switch1"
                android:scaleType="fitXY" />
        </io.agora.edu.uikit.component.SquareRelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_star_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <CheckedTextView
            android:id="@+id/roster_item_star_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:checked="false"
            android:enabled="true"
            android:textSize="@dimen/text_size_smaller"
            android:textColor="@color/theme_text_color_dark_gray"
            android:drawableStart="@drawable/agora_userlist_star_icon"
            android:drawablePadding="@dimen/margin_smaller"
            tools:text="x1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_roster_list_item_kickout_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <io.agora.edu.uikit.component.SquareRelativeLayout
            android:id="@+id/roster_item_kickout_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/roster_item_kickout_icon"
                android:layout_width="@dimen/agora_userlist_row_icon_height1"
                android:layout_height="@dimen/agora_userlist_row_icon_height1"
                android:layout_centerInParent="true"
                android:checked="false"
                android:enabled="true"
                android:src="@drawable/agora_userlist_kickout_icon"
                android:scaleType="fitXY"/>
        </io.agora.edu.uikit.component.SquareRelativeLayout>
    </RelativeLayout>
</LinearLayout>